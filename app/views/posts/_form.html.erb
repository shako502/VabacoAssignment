<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, "სათაური", class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :body, "კონტენტი", class: "form-label" %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="mb-3">
    <div class="form-check">
      <%= form.check_box :mark_for_deletion, class: "form-check-input" %>
      <%= form.label :mark_for_deletion, "წასაშლელი ( mark_for_deletion )", class: "form-check-label" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "განახლება", class: "btn btn-success" %>
  </div>
<% end %>
