<div class="container">
    <h1 class="text-center mt-2">ტექსტში გამეორებული სიმბოლოები</h1>

    <%= form_with(model: @duplicates, id: "counter-form", local: false) do |form| %>
        <div class="mb-3">
            <%= form.label "შეიყვანეთ ტექსტი: ", class: "form-label" %>
            <%= form.text_field :textToCount, class: "form-control" %>
        </div>
        <%= form.submit "დათვლა" , class: "btn btn-primary" %>
    <% end %>

    <div class="row counted-results-container">
        <div class="col-8">
            <div class="alert alert-success mt-5" role="alert">
                <h4 class="alert-heading">გამეორებული სიმბოლოების რაოდენობა: <span id="counted-char-res"></span> </h4>
                <hr>
                <p class="mb-1">სიმბოლოების რაოდენობა: </sup></p>
                <div class="row mb-0">
                    <div class="col-3">
                        <ul class="list-group" id="individual-char-list">
                        
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>